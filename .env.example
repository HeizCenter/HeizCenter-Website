# Odoo API Configuration
# Required: URL of your Odoo server (use HTTPS in production)
NEXT_PUBLIC_ODOO_URL=https://your-odoo-server.com
# OR for local development/self-hosted:
# NEXT_PUBLIC_ODOO_URL=http://192.168.1.100:8069

# Required: Odoo database name
ODOO_DATABASE=your_database_name

# Required: API user credentials (create dedicated API user in Odoo)
ODOO_USERNAME=api@heizcenter.de
ODOO_API_KEY=your_api_key_here

# Optional: Odoo configuration IDs (get these from Odoo after setup)
# Default values will be used if not set (1, 2, 1 respectively)
ODOO_SALES_TEAM_ID=1
ODOO_EMERGENCY_TEAM_ID=2
ODOO_NEWSLETTER_LIST_ID=1

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=HeizCenter

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=info@heizcenter.de
NEXT_PUBLIC_CONTACT_PHONE=+49 821 123456
